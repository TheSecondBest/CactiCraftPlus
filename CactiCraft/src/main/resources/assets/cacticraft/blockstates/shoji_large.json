{
    "multipart": [
        {   "apply": { "model": "cacticraft:block/shoji_post" }},
        {   "when": { "north": true },
            "apply": { "model": "cacticraft:block/shoji_large_side" }
        },
        {   "when": { "east": true },
            "apply": { "model": "cacticraft:block/shoji_large_side", "y": 90 }
        },
        {   "when": { "south": true },
            "apply": { "model": "cacticraft:block/shoji_large_side_alt" }
        },
        {   "when": { "west": true },
            "apply": { "model": "cacticraft:block/shoji_large_side_alt", "y": 90 }
        },
        {   "when": { "north": false },
            "apply": { "model": "cacticraft:block/shoji_large_noside" }
        },
        {   "when": { "east": false },
            "apply": { "model": "cacticraft:block/shoji_large_noside_alt" }
        },
        {   "when": { "south": false },
            "apply": { "model": "cacticraft:block/shoji_large_noside_alt", "y": 90 }
        },
        {   "when": { "west": false },
            "apply": { "model": "cacticraft:block/shoji_large_noside", "y": 270 }
        }
    ]
}
